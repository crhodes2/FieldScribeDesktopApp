<Window x:Class="Fieldscribe_Windows_App.Intro"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Fieldscribe_Windows_App"
        xmlns:gif="http://wpfanimatedgif.codeplex.com"
        mc:Ignorable="d"
        Title="Intro" Height="250" Width="450" WindowStyle="None" BorderBrush="Transparent" AllowsTransparency="True" WindowStartupLocation="CenterScreen">
    <Window.Background>
        <ImageBrush ImageSource="Images/gray.png"/>
    </Window.Background>

    <Grid Margin="0,0,-0.4,-0.4">
        <Image gif:ImageBehavior.AnimatedSource="Images/FSIntro.gif" Margin="10,1,0,10">
            <Image.OpacityMask>
                <ImageBrush ImageSource="Images/FSIntro.gif"/>
            </Image.OpacityMask>
        </Image>

    </Grid>
</Window>
